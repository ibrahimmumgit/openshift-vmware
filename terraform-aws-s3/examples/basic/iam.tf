resource "random_integer" "this" {
  min = 100000
  max = 999999
}

resource "aws_iam_role" "example" {
  name = "example-role-${random_integer.this.id}"
  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "ec2.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      },
    ]
  })
}

